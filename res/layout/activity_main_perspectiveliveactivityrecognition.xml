<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

	<Switch
	    android:id="@+id/enabledSwitchActivityRecognitionLive"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="20dip"
	    android:text="System is" />
	<TextView 
	    android:id="@+id/switchinfo_idActivityRecognitionLive"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/enabledSwitchActivityRecognitionLive"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="1dip"
	    android:textSize="12sp"
	    android:text="(Slide the switch to change the status)"
	    >	  
	</TextView>	    
	
</RelativeLayout>
