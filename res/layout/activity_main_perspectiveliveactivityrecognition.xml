<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/config_screen_background"
    tools:context="${relativePackage}.${activityClass}" >

    <ImageView
	    android:layout_width="231dp"
	    android:layout_height="170dp"
	    android:layout_centerHorizontal="true"
	    android:src="@drawable/logo_for_header"
	    android:layout_alignParentTop="true"
        >
        
    </ImageView>
    <LinearLayout 
		android:id="@+id/middlearea_whenenabled"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
		android:orientation="vertical"
        >
        <TextView
		    android:id="@+id/middleareatext_whenenabled"
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content"
		    android:textSize="18sp"		    
		    android:text="@string/textwhenenabled"
		    android:gravity="center_horizontal"
		    android:paddingBottom="15dip"
		    	>            
        </TextView>
        <ImageView 
		    android:layout_width="wrap_content" 
		    android:layout_gravity="center_horizontal"
		    android:layout_height="wrap_content"
		    android:src="@drawable/config_screen_icon_enabled"
            >
            
        </ImageView>
    </LinearLayout>
    <LinearLayout 
		android:id="@+id/middlearea_whendisabled"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
		android:orientation="vertical"
        >
        <TextView
		    android:id="@+id/middleareatext_whendisabled"
		    android:textSize="18sp"
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content"
		    android:gravity="center_horizontal"
		    android:layout_marginLeft="20dp"
		    android:layout_marginRight="20dp"
		    android:text="@string/textwhendisabled"
		    android:paddingBottom="15dip"
        	>            
        </TextView>
        <ImageView 
		    android:layout_width="wrap_content" 
		    android:layout_gravity="center_horizontal"
		    android:layout_height="wrap_content"
		    android:src="@drawable/config_screen_icon_disabled"
            >
            
        </ImageView>
    </LinearLayout>
    <Switch
	    android:id="@+id/enabledSwitchActivityRecognitionLive"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="20dip"
	    android:layout_above="@+id/mainactivity_buttons"
	    android:text="System is" />
	<LinearLayout
	    android:id="@+id/mainactivity_buttons"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_centerHorizontal="true"
	    android:orientation="horizontal"
	    android:paddingTop="30dp"
	    android:paddingBottom="15dp"
	    >
	    <ImageButton
		    android:id="@+id/btn_advancedsettings_alert"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="5dip"
		    android:layout_gravity="left"
			android:src="@drawable/button_advanced_settings"	   
			android:background="@null"
			android:gravity="left"
        >
        </ImageButton>
	    <ImageButton
		    android:id="@+id/btn_closewindow_alert"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
			android:src="@drawable/button_close_window"	 
			android:layout_marginRight="5dip"
			android:layout_gravity="right"       
			android:gravity="right"
			android:background="@null"
        >
	        	        
	    </ImageButton>
			        
	</LinearLayout>
		
</RelativeLayout>
